
public class Solution {

	public static void main(String[] args) 
	{
		

	}
	
	public static String solution(String S, int K)
    {
        String formatted = " ";
        char c;
        S = S.toUpperCase();
        
        for (int i = 0; i < S.length(); i++)
        {
        	c = S.charAt(i);
        	
        	if (c != '-')
        		formatted += c;
        	
        	if (i % K == 0)
        		formatted += '-';
        }
        
        return formatted;
        
    }

}
